<form action="/me/orders" method="GET" class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <h1 class="text-center">Order Details: {{order._id}}</h1>
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">All - {{totalItems}} item(s)</h5>
                    </div>
                    <div class="card-body">
                        {{#each order.items}}
                        <!-- Single item -->
                        <div class="row">
                            <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                <!-- Image -->
                                <div class="bg-image hover-overlay hover-zoom ripple rounded"
                                    data-mdb-ripple-color="light">

                                    <a href="/shop/{{this.product._id}}">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)">
                                            <img src="{{this.product.thumbnail}}" class="w-100"
                                                alt="{{this.product.name}}" />
                                        </div>
                                    </a>
                                </div>
                                <!-- Image -->
                            </div>

                            <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                <!-- Data -->
                                <p><strong>{{this.product.name}}</strong></p>


                                <!-- Data -->
                            </div>

                            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 align-self-center">
                                <!-- Price -->
                                <p class="text-start text-md-center">
                                    <strong>Price per product: {{this.product.price}}₫</strong>
                                </p>
                                <!-- Price -->

                                <!-- Quantity -->
                                <p class="text-start text-md-center">
                                    <strong>Quantity: {{this.quantity}}</strong>
                                </p>
                                <p class="text-start text-md-center">
                                    <strong>Total: {{this.price}}₫</strong>
                                </p>
                                <!-- Quantity -->
                            </div>
                        </div>
                        <!-- Single item -->

                        <hr class="my-4" />
                        {{/each}}
                    </div>
                    <div class="card-header py-3">
                        <h1>Shipping</h1>
                        <p>Please enter your shipping details.</p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <span for="firstName">First name <br></span>
                                <input disabled="true" value="{{order.shippingDetails.firstName}}" type="text"
                                    name="firstName" required="true" />
                            </div>
                            <div class="col">
                                <span for="lastName">Last name <br></span>
                                <input disabled="true" value="{{order.shippingDetails.lastName}}" type="text"
                                    name="lastName" required="true" />
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                                <span for="address">Address <br></span>
                                <textarea disabled="true" name="address" style="width: 100%"
                                    required="true">{{order.shippingDetails.address}}</textarea>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                                <span for="country">Country <br></span>
                                <select disabled="true" name="country" class="py-1" required="true">
                                    <option value="Viet Nam" selected="true">Viet Nam</option>
                                </select>
                            </div>
                            <div class="col">
                                <span for="city">City <br></span>
                                <input value="{{order.shippingDetails.city}}" disabled="true" type="text" name="city"
                                    required="true" />
                            </div>
                            <div class="col">
                                <span for="zipCode">Zip code <br></span>
                                <input value="{{order.shippingDetails.zipCode}}" disabled="true" type="number"
                                    name="zipCode" min="0" required="true" />
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                                <span for="paymentMethod">Payment method <br></span>
                                <select disabled="true" name="paymentMethod" class="py-1" required="true">
                                    <option value="pay when delivered" selected="true">Pay when delivered</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li
                                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Items
                                <span>{{order.totalPrice}}₫</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Shipping
                                <span>0₫</span>
                            </li>
                            <li
                                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Total amount</strong>
                                    <strong>
                                        <p class="mb-0">(including VAT)</p>
                                    </strong>
                                </div>
                                <span><strong>{{order.totalPrice}}₫</strong></span>
                            </li>
                        </ul>

                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">
                    Return
                </button>
            </div>
        </div>
    </div>
</form>