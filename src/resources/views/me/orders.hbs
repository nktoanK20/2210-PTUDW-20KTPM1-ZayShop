<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        {{> user-summary}}
        <div class="col-md-8 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Orders List</h4>
                    {{#if message}}
                    <h4 class="text-success">{{message}}</h4>
                    {{/if}}
                    {{#if errorMessages}}
                    {{#each errorMessages}}
                    <h4 class="text-danger">{{this}}</h4>
                    {{/each}}
                    {{/if}}
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" width="100%" cellspacing="0">
                        {{#if orders}}
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Created At</th>
                                <th scope="col">Payment Method</th>
                                <th scope="col">Total</th>
                                <th scope="col">Status</th>
                                <th scope="col">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td>{{this._id}}</td>
                                <td>{{this.createdAt}}</td>
                                <td>{{this.paymentMethod}}</td>
                                <td>{{this.totalPrice}}â‚«</td>
                                <td>{{this.status}}</td>
                                <td><a href="/me/order-detail/{{this._id}}" index="{{@index}}"
                                        class="btn btn-link">View</a></td>
                            </tr>

                            {{/each}}
                            {{else}}
                            <h2>You don't have any order yet...</h2>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{>user-settings-navigator}}
    </div>
</div>