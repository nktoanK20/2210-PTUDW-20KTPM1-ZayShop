<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        {{> user-summary}}
        <form class="col-md-6 border-right" action="/me/profile?_method=PUT" method='POST'>
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Information</h4>
                    {{#if message}}
                    <h4 class="text-success">{{message}}</h4>
                    {{/if}}
                    {{#each errorMessages}}
                    <h4 class="text-danger">{{this}}</h4>
                    {{/each}}
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">First Name</label>
                        <input type="text" class="form-control" name="firstName" placeholder="first name"
                            value='{{user.firstName}}' required="true">
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Last name</label>
                        <input type="text" class="form-control" name="lastName" placeholder="last name"
                            value='{{user.lastName}}' required="true">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Avatar Image Link</label>
                        <input type="text" class="form-control" name="avatar" placeholder="Avatar image link"
                            value='{{user.avatar}}'>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels">Phone Number</label>
                        <input type="text" class="form-control" name="phoneNumber" placeholder="enter phone number"
                            value='{{user.phoneNumber}}'>
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Address</label>
                        <input type="text" class="form-control" name="address" placeholder="enter address"
                            value="{{user.address.address}}">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Country</label>
                        <input type="text" class="form-control" name="country" placeholder="enter country"
                            value="{{user.address.country}}">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">City</label>
                        <input type="text" class="form-control" name="city" placeholder="city"
                            value="{{user.address.city}}">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Postcode (Zip code)</label>
                        <input type="number" class="form-control" name="postcode" placeholder="enter postcode"
                            value="{{user.address.postcode}}">
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                </div>
            </div>
        </form>
        {{>user-settings-navigator}}
    </div>
</div>